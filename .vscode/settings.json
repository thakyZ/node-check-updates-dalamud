{
    "search.exclude": {
        "**/coverge": true,
        "**/dist": true,
        "**/node_modules": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "typescript.referencesCodeLens.enabled": true,
    "eslint.experimental.useFlatConfig": true,
    "eslint.enable": true,
    "eslint.format.enable": false,
    "eslint.options": {
        "overrideConfigFile": "./eslint.config.mjs"
    }
}
